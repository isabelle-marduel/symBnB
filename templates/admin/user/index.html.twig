{% extends 'admin/base.html.twig' %}

{% block title %}Administration des utilisateurs{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des utilisateurs</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Avatar</th>
                    <th>Pr√©nom</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th class="text-center">Introduction</th>
                    <th>Description</th>
                    <th>Annonces</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                {% for user in pagination.data %}
                    <tr>
                        <td>{{user.id}}</td>
                        <td><img src="{{user.picture}}" alt="Avatar de {{user.fullName}}" class="avatar avatar-medium"></td>
                        <td>{{user.firstname}}</td>
                        <td>{{user.lastname}}</td>
                        <td>{{user.email}}</td>
                        <td>{{user.introduction}}</td>
                        <td>{{user.description|raw}}</td>
                        <td class="text-center">
                            <span class="badge badge-primary rounded">{{user.ads|length}}</span>
                        </td>
                        <td>
                            <a href="#" class="btn btn-primary mb-1"><i class="fas fa-edit"></i></a>
                            <a href="{{ path('admin_users_delete', {'id' : user.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{ pagination.display() }}
    </div>
{% endblock %}
